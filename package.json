{
  "name": "LogApp",
  "private": true,
  "scripts": {
    "lint": "npm run \"lint:js\" && npm run \"lint:css\"",
    "lint:js": "eslint --ext js,jsx .",
    "lint:css": "stylelint \"ui/**/*.css\" \"main.css\"",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha -w --compilers js:babel-register",
    "coverage": "nyc --require babel-core/register mocha",
    "build": "gulp cleanup && gulp build"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.0.2",
    "react-addons-create-fragment": "^15.0.1",
    "react-addons-pure-render-mixin": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-router": "^2.4.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "del": "^2.2.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.10.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "faker": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-if": "^2.0.1",
    "gulp-postcss": "^6.1.1",
    "gulp-rev": "^7.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "mocha": "^2.5.2",
    "nyc": "^6.4.4",
    "postcss-cssnext": "^2.5.2",
    "postcss-easy-import": "^1.0.1",
    "postcss-mixins": "^4.0.1",
    "react-addons-test-utils": "^15.0.2",
    "rucksack-css": "^0.8.6",
    "sinon": "^1.17.4",
    "stylelint": "^6.3.3",
    "stylelint-config-standard": "^7.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^meteor/"
          ]
        }
      ],
      "no-underscore-dangle": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "node_modules/**/*.css",
      "ui/stylesheets/reset.css",
      "build/**/*.css"
    ]
  },
  "nyc": {
    "extension": [
      ".jsx"
    ],
    "report-dir": "./coverage"
  }
}
